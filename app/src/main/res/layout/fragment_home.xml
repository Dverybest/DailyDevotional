<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="?attr/actionBarSize">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:fontFamily="sans-serif-black"
            android:layout_gravity="start"
            android:text="Daily Devotional"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorInactive"
            android:textSize="10sp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:textAlignment="center"
            android:fontFamily="monospace"
            android:textFontWeight="600"
            android:text="Psalm 119:105 (KJV)\nThy word is a lamp unto my feet, and a light unto my path."
            />
        <ImageView
            android:id="@+id/text_home"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/family"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/dView"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/clearbg"
            android:elevation="5dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="8dp"
                android:textSize="12sp"
                android:textColor="#000"
                android:fontFamily="monospace"
                android:text="5TH MAY, 2020(TUESDAY)"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#0000ff"
                android:fontFamily="monospace"
                android:layout_margin="2dp"
                android:text="TOPIC:THE KINGDOM OF HEAVEN IS AT HAND."
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textColor="#ff0000"
                android:fontFamily="monospace"
                android:textSize="13sp"
                android:text="TEXT:MATTHEW 10 VS. 7"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textColor="#1d1d1d"
                android:ellipsize="end"
                android:maxLines="5"
                android:justificationMode="inter_word"
                android:lineHeight="22sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:gravity="start"
                android:text="@string/text"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:padding="8dp"
                android:textColor="#808080"
                android:id="@+id/readMore"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="monospace"
                android:layout_gravity="center_horizontal|end"
                android:text="Read more"
                />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>